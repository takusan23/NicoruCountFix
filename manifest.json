{
    "manifest_version": 2,
    "name": "NicoruCountFix",
    "version": "1.0",
    "description": "ニコル数が9+以上表示されないのを直す拡張機能",
    "icons": {
        "48": "icon/nicoru_count_fix_icon_48.png",
        "128": "icon/nicoru_count_fix_icon_128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.nicovideo.jp/watch/*"
            ],
            "js": [
                "nicoru.js"
            ]
        }
    ],
    "permissions": [
        "storage"
    ]
}